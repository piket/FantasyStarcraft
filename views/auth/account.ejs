<% include ../partials/header.ejs %>

<h1 class="text-center">Your Teams</h1>
<div class="row">
    <% if (teams.length === 0) { %>
        <% if (leagues.length === 0) { %>
    <h3 class="text-center">You haven't joined any leagues yet, select a tournament from the main page to create a league, or join one of your firends' leagues!</h3>
        <% } else { %>
        <% } %>
        <% leagues.forEach(function(league) { %>
     <a href="/tournament/<%=league.tournament.name.replace(/ /g,'_')%>" class="btn btn-warning center-block">Create a Team for <em><%=league.name%></em></a>
     <br><br>
            <% }) %>
    <% } %>
    <% teams.forEach(function(team,count) { %>
    <div class="jumbotron">
        <h2 class="text-center"><%=team.name%></h2>
        <hr>
        <input type="hidden" class="teamId" value="<%=team.id%>">
        <table class="table table-striped table-bordered team-table line-up" id="<%=count%>">
        <tr><th class="header" colspan="3">Total Points</th><th class="header total" colspan="2"></th></tr>
        <tr><th>Player</th><th>Wins</th><th>Loses</th><th>Streaks</th><th>Points</th></tr>
        <tr id="loader<%=count%>"><td colspan="5" class="loading-horizontal"><img class="loading-horizontal" src="/images/ajax-loader-horizontal.gif"></td></tr>
        </table>
    </div>
    <% }) %>
</div>

<% include ../partials/footer.ejs %>