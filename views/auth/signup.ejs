<% include ../partials/header.ejs %>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <form id="signup" action="/auth/signup" method="post">
            <div class="form-group">
                <input type="text" name="name" placeholder="Enter a username" class="form-control">
<br>
                <input type="text" name="email" placeholder="Enter an email address" class="form-control">
<br>
                <input type="password" name="password" placeholder="Enter a password" class="form-control">
<br>
                <input type="password" name="password2" placeholder="Re-enter your password" class="form-control">
            </div>
            <input type="submit" value="Sign Up" class="btn btn-primary btn-lg center-block">
        </form>
    </div>
</div>


